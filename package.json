{
  "name": "@mag123c/nestjs-stdschema",
  "version": "0.1.2",
  "description": "Universal schema validation for NestJS using standard-schema spec. Support Zod, Valibot, ArkType and 20+ validators with a single package.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "pnpm build",
    "prepare": "husky"
  },
  "keywords": [
    "nestjs",
    "validation",
    "standard-schema",
    "zod",
    "valibot",
    "arktype",
    "dto",
    "pipe",
    "openapi",
    "swagger"
  ],
  "author": "mag123c (https://github.com/mag123c)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mag123c/nestjs-stdschema.git"
  },
  "bugs": {
    "url": "https://github.com/mag123c/nestjs-stdschema/issues"
  },
  "homepage": "https://github.com/mag123c/nestjs-stdschema#readme",
  "peerDependencies": {
    "@nestjs/common": "^10.0.0 || ^11.0.0",
    "@nestjs/core": "^10.0.0 || ^11.0.0",
    "reflect-metadata": "^0.1.13 || ^0.2.0"
  },
  "peerDependenciesMeta": {
    "@nestjs/swagger": {
      "optional": true
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.39.1",
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/platform-express": "^11.1.9",
    "@nestjs/swagger": "^11.2.3",
    "@nestjs/testing": "^11.0.0",
    "@types/node": "^24.10.1",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8",
    "@typescript-eslint/parser": "^8",
    "@vitest/coverage-v8": "^2.0.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.0.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "prettier": "^3.0.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.0",
    "supertest": "^7.1.4",
    "tsup": "^8.0.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.48.0",
    "valibot": "^1.0.0",
    "vitest": "^2.0.0",
    "zod": "^4.1.13"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
